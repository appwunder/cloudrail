# Database
# For Docker: postgresql://postgres:postgres@localhost:5433/cloudcostly
# For local PostgreSQL: postgresql://user:password@localhost:5432/cloudcostly
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/cloudcostly

# AWS
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# API
API_SECRET_KEY=your-secret-key-here-change-in-production
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Environment
ENVIRONMENT=development

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Redis (for caching)
# For Docker: redis://localhost:6380
# For local Redis: redis://localhost:6379
REDIS_URL=redis://localhost:6380
